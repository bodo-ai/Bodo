#!/bin/bash
set -x

WORKING_DIRECTORY=/opt/bodo-sql-service

echo "Installing Bodo SQL service ..."
mkdir -p ${WORKING_DIRECTORY}

echo "Bodo SQL copy files ..."
cp main.py ${WORKING_DIRECTORY}/main.py

echo "Bodo SQL update permissions ..."
chown bodo:bodo ${WORKING_DIRECTORY}

echo "Finished service installation"
