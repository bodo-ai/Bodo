[Unit]
Description=jupyter service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
EnvironmentFile=/etc/environment
RestartSec=1
User={{ CLUSTER_USER }}
ExecStart=/opt/conda/bin/jupyter lab --ServerApp.token=JUPYTER_TOKEN --notebook-dir=/shared --config=/home/{{ CLUSTER_USER }}/.jupyter/jupyter_notebook_config.py

[Install]
WantedBy=multi-user.target
